[control]
controller ansible_connection=podman ansible_podman_extra_args='--remote-user=root' ansible_host=controller

[network]
controller ansible_connection=podman ansible_podman_extra_args='--remote-user=root' ansible_host=controller

[compute]
compute1 ansible_connection=podman ansible_podman_extra_args='--remote-user=root' ansible_host=compute1
compute2 ansible_connection=podman ansible_podman_extra_args='--remote-user=root' ansible_host=compute2

[storage]
storage ansible_connection=podman ansible_podman_extra_args='--remote-user=root' ansible_host=storage

[deployment]
localhost ansible_connection=local